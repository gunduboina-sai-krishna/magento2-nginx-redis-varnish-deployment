vcl 4.1;

backend default {
    .host = "127.0.0.1";
    .port = "8080";  
}

acl purge {
    "127.0.0.1";
    "localhost";
}

sub vcl_recv {
    if (req.method == "PURGE") {
        if (!client.ip ~ purge) { return (synth(405, "Not allowed.")); }
        return (purge);
    }

    if (req.url ~ "^/(pub/)?(media|static)/") { return (hash); }
    if (req.method == "POST" || req.http.Authorization) { return (pass); }
    if (req.http.Cookie ~ "PHPSESSID") { return (pass); }

    unset req.http.Cookie;
    return (hash);
}

sub vcl_backend_response {
    if (beresp.ttl <= 0s || beresp.http.Set-Cookie) {
        set beresp.ttl = 3600s;
    }
    return (deliver);
}

sub vcl_deliver {
    if (obj.hits > 0) { set resp.http.X-Cache = "HIT"; }
    else { set resp.http.X-Cache = "MISS"; }
}
